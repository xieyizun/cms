div.user_form {
  margin: 0 auto;
  width: 20%;
  height: 50%;
  text-align: center;
  overflow: hidden;
  font-size: 1.2em;

  ul {
    list-style: none;
    margin-top: 100px;
    border: 1px solid darkgray;
    border-radius: 10px 10px 10px 10px;
    background-color: whitesmoke;
    padding-left: 0;

    li {
     padding: 10px;
      p {
        text-align: left;
      }
      input {
        width: 100%;
        height: 20px;
        border-radius: 4px;
      }

      button {
        width: 80%;
        height: 45px;
        font-size: 1em;
        background-color: lightgray;
        border-radius: 5px;
      }
    }
  }
}